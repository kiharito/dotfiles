{
  "ui_font_size": 16,
  "buffer_font_family": "UDEV Gothic 35NF",
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "languages": {
    "Python": {
      "language_servers": [
        "pyright",
        "ruff"
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
